#include <iostream>
#include <vector>

using namespace std;

int main() {
    int n;
    vector<int> array;
    double sum = 0.0, average;

    cout << "Enter the number of elements: ";
    cin >> n;

    if (n <= 0) {
        cout << "Invalid input for number of elements.\n";
        return 1;
    }

    array.resize(n);

    cout << "Enter " << n << " integers:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> array[i];
        sum += array[i];
    }

    average = sum / n;

    cout << "Average of the elements = " << average << endl;

    return 0;
}
